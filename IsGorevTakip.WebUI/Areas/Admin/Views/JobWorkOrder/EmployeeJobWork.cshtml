@model EmployeeJobWorkListViewModel
@{
    ViewData["Title"] = "EmployeeJobWork";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="row mt-2">
    <div class="col-md-4">
        <div class="card border border-primary shadow">          
            <div class="card-body">
                <div class="card-header">
                    <h4 class="text-center lead pt-2 ">Görev Bilgileri</h4>
                </div>
                <h5 class="card-title">@Model.JobWork.Name</h5>
                <p class="card-text">@Model.JobWork.Description</p>
                <p class="card-text">
                    <strong>Aciliyet Durumu :</strong> <span class="badge badge-info">@Model.JobWork.Urgency.Definition</span>
                </p>
            </div>
        </div>
    </div>
    <div class="col-md-8">
        <div class="card border border-primary mb-3 p-2">
            <div class="card-header">
                <h5 class="text-cent">Personel Bilgileri</h5>
            </div>
            <div class="row no-gutters">
                <div class="col-md-4">
                    <img src="~/img/@Model.AppUser.Picture" class="card-img img-thumbnail shadow" style="height:10rem!important;" alt="@Model.AppUser.Name">
                </div>
                <div class="col-md-8">
                    <div class="card-body">
                        <h5 class="card-title">@Model.AppUser.Name @Model.AppUser.Lastname</h5>
                        <p class="card-text">
                            <getJobWorkAppUserId app-user-id="@Model.AppUser.Id"></getJobWorkAppUserId>
                        </p>
                        <p class="card-text"><small class="text-muted">@Model.AppUser.Email</small></p>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-12">
        <form asp-action="SendWorker" method="post">
            <p class="lead">
                Yukardaki göreve ilgili personel atanacaktır. Bu işlemi gerçekleştirmek istediğinizden emin misiniz?
            </p>
            <div class="form-group text-center">
                <a asp-action="SendPerson" asp-route-id="@Model.AppUser.Id" class="btn btn-primary "><i class="fas fa-chevron-circle-left mr-2"></i>Hayır Vazgeç</a>
                <input type="hidden" name="EmployeeJobWorkId" value="@Model.AppUser.Id" />
                <input type="hidden" name="JobWorkId" value="@Model.JobWork.Id" />
                <button type="submit" class="btn btn-info "><i class="fas fa-check mr-2"></i>Evet Görevlendir</button>
            </div>
        </form>
    </div>
</div>
