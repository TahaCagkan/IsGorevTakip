@model JobWorkListGetAllViewModel
@{
    ViewData["Title"] = "SendWorkerDetails";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

@if (Model.Report.Count > 0)
{
    <a asp-action="GetExcel" asp-route-id="@Model.Id" target="_blank" class="btn btn-outline-info mt-2">Excelde Görüntüle</a>
    <a asp-action="GetPfd" asp-route-id="@Model.Id" target="_blank" class="btn btn-outline-danger mt-2">PDF Görüntüle</a>
    <table class="table table-hover table-sm mt-2 text-center table-bordered">
        <tr>
            <th colspan="2">@Model.AppUser.Name @Model.AppUser.LastName personelinizin @Model.Name görevine yazmış olduğu raporlar</th>
        </tr>
        <tr>
            <th>Tanım</th>
            <th>Detay</th>
        </tr>

        @foreach (var report in Model.Report)
        {
            <tr>
                <td>@report.Definition</td>
                <td>@report.Detail</td>
            </tr>
        }
    </table>
}
else
{
    <div class="border border-dark mt-2 text-center">
        @Model.AppUser.Name @Model.AppUser.LastName personeliniz şuanda da @Model.Name görevi üzerinde çalışıyor.Henüz bir rapor yazmamış.
    </div>
}
