@model List<DeclaretionnListDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

@if (Model.Count > 0)
{
    @foreach (var declaretionn in Model)
    {
        <div class="alert alert-light p-3 my-2">
            <form method="post" asp-action="Index" asp-controller="Declaretionn" class="my-1">
                <p class="lead">
                    <input type="hidden" name="id" value="@declaretionn.Id" />
                    @declaretionn.Description
                    <button type="submit" class="btn btn-success btn-sm float-right">Okundu</button>
                </p>
            </form>
            <hr />
        </div>

    }
}
else
{
    @foreach (var declaretionn in Model)
    {
        <p class="lead">
            Okunmamış bildiriminiz bulunmamaktadır.
        </p>

    }
}


